datasource database {
    provider     = "postgresql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator db {
    provider   = "prisma-client"
    output     = "../../src/lib/db/generated"
    engineType = "client"
    runtime    = "nodejs"
}

generator erd {
    provider = "prisma-markdown"
    output   = "../../doc/erd/ERD.md"
    title    = "ERD"
}
